{

	"manifest_version": 2,
	
	"name": 		"GCSUtils",
	"description":  "A collection of utilities",
	"version": 		"1.0",
	
	"permissions": [
		"activeTab",
		"contextMenus",
		"tabs",
		"http://psv28cmsmas1:7000/*",
		"https://hortonworks.my.salesforce.com/*",
		"clipboardWrite",
		"clipboardRead",
		"notifications",
		"contextMenus",
		"storage"
	],
	
	"background": {
		"persistent": false,
		"scripts":	  [
			"js/GCSUtils.js"
		]
	},
	
	"icons": {
		"16":	"images/context_menu_icon.png"
	},
	
	"browser_action": {
		"default_icon": 	"images/browser_action_icon.png",
		"default_title":	"Support Utilities",
		"default_popup":	"html/popup.html"
	}
}